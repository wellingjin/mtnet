<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/near_white"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/id_blood_device"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="15sp"
            android:text="血压仪"
            android:textColor="#ffffff"
            android:background="@color/highred"
            android:layout_margin="8dp"
            android:gravity="center"
            android:onClick="blood_device_click"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:background="#809B9B9B"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:id="@+id/id_handin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="15sp"
            android:layout_margin="8dp"
            android:text="手动输入"
            android:textColor="@color/gray"
            android:gravity="center"
            android:onClick="handin_click"/>
    </LinearLayout>
    <TextView
        android:background="#809B9B9B"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <ViewFlipper
        android:id="@+id/optionstochoose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:persistentDrawingCache="animation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/blood_devicein"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/blood_handin"/>
        </LinearLayout>
    </ViewFlipper>

</LinearLayout>