<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/universalMoudleRootView"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/universalUpView"
        >

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/lineWidth"
            android:background="@color/colorWhite"
           >
        </LinearLayout>
        <Button
            android:id="@+id/synButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sync_blood_suger"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/date_size"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/lineWidth"
            android:background="@color/colorWhite"
            >
        </LinearLayout>
        <Button
            android:id="@+id/medicineQueryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/query_medicine"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/date_size"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/lineWidth"
            android:background="@color/colorWhite"
            >
        </LinearLayout>
        <Button
            android:id="@+id/doctorButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/date_size"
            android:text="@string/doctor_info"
            />
    </LinearLayout>

</LinearLayout>
