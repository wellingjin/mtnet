<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bloodSugerBGColor"
    android:id="@+id/bloodSuger"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        >
        <TextView
            android:id="@+id/SugerAttr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/normal"
            android:textSize="@dimen/font_size"
            android:textColor="@color/colorWhite"
            />
        <LinearLayout
            android:id="@+id/SugerTimeChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            >
            <TextView
                android:id="@+id/SugerDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/default_date"
                android:textSize="@dimen/date_size"
                android:textColor="@color/colorWhite"
                android:gravity="end"
                />
            <TextView
                android:id="@+id/SugerTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/default_time"
                android:textSize="@dimen/time_size"
                android:textColor="@color/colorWhite"
                android:gravity="end"
                />
        </LinearLayout>
    </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >


        <TextView
            android:id="@+id/bloodSugerGreen"
            android:layout_width="@dimen/blood_suger_width"
            android:layout_height="@dimen/blood_suger_Height"
            android:background="@color/colorGreen"

            />
        <TextView
            android:id="@+id/bloodSugerWhite"
            android:layout_width="@dimen/blood_suger_width"
            android:layout_height="@dimen/blood_suger_Height"
            android:layout_alignTop="@id/bloodSugerGreen"
            android:background="@color/colorWhite"
            />
        <TextView
            android:id="@+id/bloodSugerValue"
            android:layout_width="@dimen/blood_suger_width"
            android:layout_height="@dimen/blood_suger_Height"
            android:text="5.6"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            />
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_gravity="bottom"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ç”·"
            android:textSize="@dimen/date_size"
            android:textColor="@color/colorWhite"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_gravity="bottom" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/amount"
            android:textSize="@dimen/date_size"
            android:textColor="@color/colorWhite"
            android:gravity="end"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            />
    </LinearLayout>
</FrameLayout>